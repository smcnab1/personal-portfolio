generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  excerpt   String?
  slug      String   @unique
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  views     Int      @default(0)
}

model Career {
  id               Int      @id @default(autoincrement())
  position         String
  company          String
  companyLegalName String?
  logo             String?
  location         String
  locationType     String?
  type             String
  startDate        String
  endDate          String?
  industry         String?
  link             String?
  responsibilities String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  isActive         Boolean  @default(true)
  sortOrder        Int      @default(0)

  @@unique([position, company])
}

model Certification {
  id           Int      @id @default(autoincrement())
  membership   String
  organisation String
  logo         String?
  type         String
  startDate    String
  endDate      String?
  industry     String?
  link         String?
  description  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)

  @@unique([membership, organisation])
}

model Education {
  id        Int      @id @default(autoincrement())
  degree    String
  school    String
  major     String?
  logo      String?
  location  String?
  startYear Int
  endYear   Int?
  link      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)

  @@unique([degree, school])
}

model Publication {
  id           Int      @id @default(autoincrement())
  title        String
  journal      String
  logo         String?
  location     String?
  locationType String?
  type         String
  startDate    String
  link         String?
  overview     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)

  @@unique([title, journal])
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  image       String?
  linkDemo    String?
  linkGithub  String?
  stacks      String?
  isShow      Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sortOrder   Int      @default(0)
}

model About {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String
  description String?
  type        String   @default("string")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CMSUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
